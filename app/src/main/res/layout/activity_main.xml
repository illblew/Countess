<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="countess.willblew.com.countess.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20"
        android:id="@+id/p1"
        android:rotation="-180"
        android:textSize="172dp"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/p2"
        android:layout_alignStart="@+id/p2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20"
        android:id="@+id/p2"
        android:textSize="172dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:id="@+id/p1plus"
        android:layout_marginBottom="66dp"
        android:textSize="48dp"
        android:layout_alignBottom="@+id/p1"
        android:layout_toLeftOf="@+id/p1"
        android:layout_toStartOf="@+id/p1"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:onClick="p1add"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="+"
        android:id="@+id/p2plus"
        android:layout_marginBottom="59dp"
        android:textSize="48dp"
        android:layout_alignBottom="@+id/p2"
        android:layout_toRightOf="@+id/p2"
        android:layout_toEndOf="@+id/p2"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:onClick="p2add"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/p2min"
        android:textSize="48dp"
        android:layout_alignTop="@+id/p2plus"
        android:layout_alignLeft="@+id/p1plus"
        android:layout_alignStart="@+id/p1plus"
        android:onClick="p2sub"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-"
        android:id="@+id/p1min"
        android:textSize="48dp"
        android:layout_alignTop="@+id/p1plus"
        android:layout_alignRight="@+id/p2plus"
        android:layout_alignEnd="@+id/p2plus"
        android:onClick="p1sub"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NEW GAME"
        android:id="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="startGame"/>
</RelativeLayout>
